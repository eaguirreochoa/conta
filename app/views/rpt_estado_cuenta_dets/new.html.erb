<% provide(:title, "Estado de Cuenta") %>
<% provide(:sub_title, "Impresion")  %>
      

<%= form_for @rpt_estado_cuenta_det do |f| %>
  <% if @rpt_estado_cuenta_det.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@rpt_estado_cuenta_det.errors.count, "error")} prohibited this rpt_estado_cuenta_det from being sent:" %>
      </h2>

      <ul>
        <% @rpt_estado_cuenta_det.errors.full_rpt_estado_cuenta_dets.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      <ul>
    </div>
  <% end %>

	   <div class="row">      
      <div class="small-4 columns">
        <%= f.label :f_ini, "Fecha Inicial" %>
        <%= f.date_field :f_ini, value: @rpt_estado_cuenta_det.inicio_ciclo.strftime("%Y-%m-%d") %>
      </div>

      <div class="small-4 columns">
        <%= f.label :f_fin, "Fecha final" %>
        <%= f.date_field :f_fin, value: @rpt_estado_cuenta_det.fin_periodo.strftime("%Y-%m-%d") %>
      </div>

      <div class="small-4 columns">    
      </div>
    </div>

    <div class="row">      
      <div class="small-4 columns">
       	<%= f.label :catalogo_id, "Cuenta" %>
		<%= select_tag :catalogo_id, options_from_collection_for_select(Catalogo.listar_usa_laux1, :id, :codigoname), include_blank: true, class: "searchable" %>
      </div>
    </div>

      <div class="row">      
      <div class="small-4 columns">
       	<%= f.label :cod_lib_aux1, "Libro Auxiliar" %>
		<%= select_tag :cod_lib_aux1, options_from_collection_for_select(Libauxdet.all, :id, :name), include_blank: true, class: "searchable" %>
      </div>
    </div>

    

  <div class="actions">
    <%= f.button 'Imprimir', :class => 'small button', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Procesando..."} %>
  </div>


<% end %>


