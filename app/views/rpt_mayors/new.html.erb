<% provide(:title, "Libro Mayor") %>
<% provide(:sub_title, "Impresion")  %>


<%= form_for @rpt_mayor do |f| %>
  <% if @rpt_mayor.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@rpt_mayor.errors.count, "error")} prohibited this rpt_mayor from being sent:" %>
      </h2>

      <ul>
        <% @rpt_mayor.errors.full_rpt_mayors.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      <ul>
    </div>
  <% end %>



	 <div class="row">      
      <div class="small-4 columns">
        <%= f.label :f_ini, "Fecha Inicial" %>
        <%= f.date_field :f_ini, value: @rpt_mayor.inicio_ciclo.strftime("%Y-%m-%d") %>
      </div>

      <div class="small-4 columns">
        <%= f.label :f_fin, "Fecha final" %>
        <%= f.date_field :f_fin, value: @rpt_mayor.fin_periodo.strftime("%Y-%m-%d") %>
      </div>

      <div class="small-4 columns">    
      </div>
    </div>

  <div class="actions">
    <%= f.button 'Imprimir', :class => 'small button', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Procesando..."} %>
  </div>
<% end %>



    
